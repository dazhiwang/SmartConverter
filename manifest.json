{
  "manifest_version": 2,

  "name": "Smart Converter",
  "description": "This extension allows user to see units he is comfortable with automatically.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "logo1.png",
  	"default_title": "Smart Converter",
    "default_popup": "length_setting.html"
  },

  "background": {
	"persistent": true,
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "storage", 
    "tabs",
    "background"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com; object-src 'self'",
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "*://*.amazon.com/*"],
	  "run_at": "document_end",
      "js": ["content_script.js"]
    }
  ]
}
